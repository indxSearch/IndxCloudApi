@page "/Account/ApiKey"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.IdentityModel.Tokens
@using System.IdentityModel.Tokens.Jwt
@using System.Security.Claims
@using System.Text
@using IndxCloudApi.Data
@attribute [Authorize]
@inject UserManager<ApplicationUser> UserManager
@inject IConfiguration Configuration
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IJSRuntime JSRuntime
@inject ILogger<ApiKey> Logger

<PageTitle>API Key / JWT Token</PageTitle>

<h2>Your API Token</h2>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div style="padding: 20px; border: 1px solid var(--CSignal); border-radius: var(--radius); background: rgba(255, 66, 56, 0.1); margin: 20px 0;">
        <strong>Error:</strong> @errorMessage
    </div>
}

<div style="margin: 40px 0;">
    <label style="display: block; margin-bottom: 10px;"><strong>Token Expiration:</strong></label>
    <select style="width: 100%; padding: 10px; border: 1px solid var(--lv3); border-radius: var(--radius); background: var(--lv0); color: var(--lv8);" @bind="selectedExpirationDays" disabled="@isLoading">
        <option value="30">30 Days</option>
        <option value="90">90 Days (Recommended)</option>
        <option value="180">180 Days (6 Months)</option>
        <option value="365">365 Days (1 Year)</option>
    </select>
    <p style="color: var(--lv5); margin-top: 5px; font-size: 13px;">Choose how long your API token will remain valid.</p>
</div>

@if (string.IsNullOrEmpty(jwtToken))
{
    <button class="btn-primary" @onclick="GenerateToken" disabled="@isLoading">
        @if (isLoading)
        {
            <span>Generating...</span>
        }
        else
        {
            <span>Generate API Token</span>
        }
    </button>
}
else if (!string.IsNullOrEmpty(jwtToken))
{
    <div style="padding: 20px; border: 1px solid var(--CTeal); border-radius: var(--radius); background: rgba(114, 245, 198, 0.1); margin: 20px 0;">
        <h3>Token Generated Successfully!</h3>
        <p>Use this token to authenticate your API requests.</p>
    </div>

    <div style="margin: 40px 0;">
        <label style="display: block; margin-bottom: 10px;"><strong>Your JWT Token:</strong></label>
        <div style="display: flex; gap: 10px;">
            <textarea style="flex: 1; padding: 10px; border: 1px solid var(--lv3); border-radius: var(--radius); background: var(--lv0); color: var(--lv8); font-family: monospace; font-size: 11px;"
                  rows="6"
                  readonly>@jwtToken</textarea>
            <button class="btn-secondary"
                    type="button"
                    @onclick="CopyToClipboard">
                Copy
            </button>
        </div>
    </div>

    @if (tokenExpiry.HasValue)
    {
        <div style="padding: 20px; border: 1px solid var(--CLightBlue); border-radius: var(--radius); background: rgba(107, 158, 255, 0.1); margin: 20px 0;">
            <strong>Expires:</strong> @tokenExpiry.Value.ToString("yyyy-MM-dd HH:mm:ss UTC")
            <br />
            <span style="font-size: 13px;">This token is valid for @expirationDaysUsed days from generation.</span>
        </div>
    }

    @if (!string.IsNullOrEmpty(copyMessage))
    {
        <div style="padding: 20px; border: 1px solid var(--CTeal); border-radius: var(--radius); background: rgba(114, 245, 198, 0.1); margin: 20px 0;">
            @copyMessage
        </div>
    }

    <div style="margin: 40px 0;">
        <h3>How to use this token:</h3>

        <div style="margin-top: 20px;">
            <h4>cURL Example</h4>
            <pre style="padding: 15px; background: var(--lv1); border: 1px solid var(--lv3); border-radius: var(--radius); overflow-x: auto; font-family: monospace; font-size: 11px; margin: 10px 0 30px 0;"><code>curl -X PUT "https://localhost:5001/api/CreateOrOpen/myDataset/1" \
     -H "Authorization: Bearer @jwtToken"</code></pre>

            <h4>JavaScript / Fetch Example</h4>
            <pre style="padding: 15px; background: var(--lv1); border: 1px solid var(--lv3); border-radius: var(--radius); overflow-x: auto; font-family: monospace; font-size: 11px; margin: 10px 0 30px 0;"><code>fetch('https://localhost:5001/api/CreateOrOpen/myDataset/1', {
     method: 'PUT',
     headers: {
       'Authorization': 'Bearer @jwtToken'
     }
   })
   .then(response => response.json())
   .then(data => console.log(data));</code></pre>

            <h4>C# HttpClient Example</h4>
            <pre style="padding: 15px; background: var(--lv1); border: 1px solid var(--lv3); border-radius: var(--radius); overflow-x: auto; font-family: monospace; font-size: 11px; margin: 10px 0 30px 0;"><code>var client = new HttpClient();
   client.DefaultRequestHeaders.Authorization =
       new AuthenticationHeaderValue("Bearer", "@jwtToken");

   var response = await client.PutAsync(
       "https://localhost:5001/api/CreateOrOpen/myDataset/1",
       null);

   var result = await response.Content.ReadAsStringAsync();</code></pre>

            <h4>Python Requests Example</h4>
            <pre style="padding: 15px; background: var(--lv1); border: 1px solid var(--lv3); border-radius: var(--radius); overflow-x: auto; font-family: monospace; font-size: 11px; margin: 10px 0 30px 0;"><code>import requests

   headers = {
       'Authorization': f'Bearer @jwtToken'
   }

   response = requests.put(
       'https://localhost:5001/api/CreateOrOpen/myDataset/1',
       headers=headers
   )

   print(response.json())</code></pre>
        </div>

        <div style="margin-top: 40px; display: flex; gap: 10px;">
            <button class="btn-secondary" @onclick="GenerateToken">
                Regenerate Token
            </button>
            <a href="/swagger" class="btn btn-secondary">
                View API Documentation
            </a>
        </div>
    </div>
}

@code {
    private string? jwtToken;
    private DateTime? tokenExpiry;
    private string? copyMessage;
    private string? errorMessage;
    private bool isLoading = false;
    private int selectedExpirationDays = 90;
    private int expirationDaysUsed = 90;

    protected override Task OnInitializedAsync()
    {
        // Don't auto-generate - let user choose expiration and click button
        return Task.CompletedTask;
    }

    private async Task GenerateToken()
    {
        isLoading = true;
        copyMessage = null;
        errorMessage = null;
        StateHasChanged();

        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated != true)
            {
                errorMessage = "You must be logged in to generate a token.";
                Logger.LogWarning("Unauthorized token generation attempt");
                isLoading = false;
                return;
            }

            var email = user.FindFirst(ClaimTypes.Email)?.Value
                        ?? user.FindFirst(ClaimTypes.Name)?.Value;

            if (string.IsNullOrEmpty(email))
            {
                errorMessage = "Unable to determine user email.";
                Logger.LogWarning("Email claim not found for authenticated user");
                isLoading = false;
                return;
            }

            var appUser = await UserManager.FindByEmailAsync(email);
            if (appUser == null)
            {
                errorMessage = "User not found in database.";
                Logger.LogWarning("User {Email} not found in database", email);
                isLoading = false;
                return;
            }

            jwtToken = GenerateJwtToken(appUser, selectedExpirationDays);
            tokenExpiry = DateTime.UtcNow.AddDays(selectedExpirationDays);
            expirationDaysUsed = selectedExpirationDays;

            Logger.LogInformation("JWT token generated for user {Email} with {Days} days expiration", email, selectedExpirationDays);
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while generating the token.";
            Logger.LogError(ex, "Error generating JWT token");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private string GenerateJwtToken(ApplicationUser user, int expirationDays)
    {
        var jwtKey = Configuration["Jwt:Key"];
        if (string.IsNullOrEmpty(jwtKey))
        {
            throw new InvalidOperationException("JWT Key is not configured");
        }

        var securityKey = new SymmetricSecurityKey(Encoding.UTF8.GetBytes(jwtKey));
        var credentials = new SigningCredentials(securityKey, SecurityAlgorithms.HmacSha256);

        var claims = new List<Claim>
        {
            new Claim(ClaimTypes.Email, user.Email ?? ""),
            new Claim(ClaimTypes.NameIdentifier, user.Id),
            new Claim(ClaimTypes.Name, user.UserName ?? user.Email ?? ""),
            new Claim(JwtRegisteredClaimNames.Sub, user.Id),
            new Claim(JwtRegisteredClaimNames.Email, user.Email ?? ""),
            new Claim(JwtRegisteredClaimNames.Jti, Guid.NewGuid().ToString())
        };

        // Add roles
        var roles = UserManager.GetRolesAsync(user).Result;
        foreach (var role in roles)
        {
            claims.Add(new Claim(ClaimTypes.Role, role));
        }

        var token = new JwtSecurityToken(
            issuer: Configuration["Jwt:Issuer"],
            audience: Configuration["Jwt:Audience"],
            claims: claims,
            expires: DateTime.UtcNow.AddDays(expirationDays),
            signingCredentials: credentials
        );

        return new JwtSecurityTokenHandler().WriteToken(token);
    }

    private async Task CopyToClipboard()
    {
        Logger.LogInformation("CopyToClipboard method called!"); // DEBUG

        if (!string.IsNullOrEmpty(jwtToken))
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("copyToClipboard", jwtToken);
                copyMessage = "✅ Token copied to clipboard!";
                Logger.LogInformation("Token copied to clipboard");
                StateHasChanged();
                await Task.Delay(3000);
                copyMessage = null;
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Failed to copy to clipboard");
                copyMessage = "❌ Failed to copy. Please copy manually.";
                StateHasChanged();
            }
        }
        else
        {
            Logger.LogWarning("jwtToken is empty!"); // DEBUG
        }
    }
}