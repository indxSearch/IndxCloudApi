@page "/Account/ResetPassword"
@using System.ComponentModel.DataAnnotations
@using System.Text
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using IndxCloudApi.Data
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager NavigationManager
@inject ILogger<ResetPassword> Logger

<PageTitle>Reset Password</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Reset Your Password</h3>
                </div>
                <div class="card-body">
                    @if (passwordReset)
                    {
                        <div class="alert alert-success">
                            <h4 class="alert-heading">Success!</h4>
                            <p>
                                Your password has been reset successfully.
                            </p>
                        </div>

                        <p>
                            You can now log in with your new password.
                        </p>

                        <hr class="my-4" />

                        <div class="text-center">
                            <a href="/Account/Login" class="btn btn-primary btn-large">
                                Go to Login
                            </a>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">
                            <strong>Error:</strong> @errorMessage
                        </div>
                        <div class="text-center mt-3">
                            <a href="/Account/ForgotPassword" class="btn btn-primary">Request a new reset link</a>
                        </div>
                    }
                    else if (string.IsNullOrEmpty(Input.Code))
                    {
                        <div class="alert alert-danger">
                            <strong>Invalid Reset Link</strong>
                            <p>The password reset link is invalid or has expired.</p>
                            <p>
                                <a href="/Account/ForgotPassword" class="btn btn-primary">Request a new reset link</a>
                            </p>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">
                            Please enter your new password below.
                        </p>

                        <EditForm Model="Input" OnValidSubmit="OnValidSubmitAsync" FormName="reset-password">
                            <DataAnnotationsValidator />

                            <input type="hidden" name="Input.Code" value="@Input.Code" />

                            <div style="margin-bottom: 20px;">
                                <label for="password">New Password</label>
                                <InputText type="password"
                                           @bind-Value="Input.Password"
                                           autocomplete="new-password"
                                           placeholder="password"
                                           id="password" />
                                <ValidationMessage For="() => Input.Password" />
                            </div>

                            <div style="margin-bottom: 20px;">
                                <label for="confirm-password">Confirm Password</label>
                                <InputText type="password"
                                           @bind-Value="Input.ConfirmPassword"
                                           autocomplete="new-password"
                                           placeholder="password"
                                           id="confirm-password" />
                                <ValidationMessage For="() => Input.ConfirmPassword" />
                            </div>

                            <div class="alert alert-info">
                                <small>
                                    <strong>Password Requirements:</strong>
                                    <ul class="mb-0">
                                        <li>At least 6 characters long</li>
                                        <li>At least one uppercase letter</li>
                                        <li>At least one lowercase letter</li>
                                        <li>At least one number</li>
                                        <li>At least one special character (!@@#$%^&amp;*)</li>
                                    </ul>
                                </small>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn-primary btn-large" disabled="@isProcessing">
                                    @if (isProcessing)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        <span>Resetting...</span>
                                    }
                                    else
                                    {
                                        <span>Reset Password</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string? errorMessage;
    private bool isProcessing = false;
    private bool passwordReset = false;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    [SupplyParameterFromQuery]
    private string? Code { get; set; }

    protected override void OnInitialized()
    {
        if (Code is null)
        {
            // Code is required
            return;
        }

        Input.Code = Encoding.UTF8.GetString(WebEncoders.Base64UrlDecode(Code));
    }

    private async Task OnValidSubmitAsync()
    {
        isProcessing = true;
        errorMessage = null;

        try
        {
            // Find user by email (we'll need to add email to the form or use a different approach)
            // For now, we'll search through all users (not ideal for large databases)
            var users = UserManager.Users.ToList();
            IdentityResult? result = null;
            ApplicationUser? user = null;

            foreach (var u in users)
            {
                // Try to reset password with this user
                result = await UserManager.ResetPasswordAsync(u, Input.Code, Input.Password);
                if (result.Succeeded)
                {
                    user = u;
                    break;
                }
            }

            if (result != null && result.Succeeded && user != null)
            {
                Logger.LogInformation("Password reset successful for user {UserId}", user.Id);
                passwordReset = true;
                isProcessing = false;
            }
            else
            {
                if (result != null && !result.Succeeded)
                {
                    errorMessage = "The password reset link is invalid or has expired. Please request a new one.";
                    Logger.LogWarning("Password reset failed. Errors: {Errors}",
                        string.Join(", ", result.Errors.Select(e => e.Description)));
                }
                else
                {
                    errorMessage = "Unable to reset password. The link may be invalid or expired.";
                }
                isProcessing = false;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error resetting password");
            errorMessage = "An error occurred while resetting your password. Please try again.";
            isProcessing = false;
        }
    }

    private sealed class InputModel
    {
        [Required]
        public string Code { get; set; } = "";

        [Required]
        [StringLength(100, ErrorMessage = "The {0} must be at least {2} and at max {1} characters long.", MinimumLength = 6)]
        [DataType(DataType.Password)]
        public string Password { get; set; } = "";

        [DataType(DataType.Password)]
        [Compare("Password", ErrorMessage = "The password and confirmation password do not match.")]
        public string ConfirmPassword { get; set; } = "";
    }
}
