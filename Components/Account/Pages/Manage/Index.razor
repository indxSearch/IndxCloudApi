@page "/Account/Manage"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Identity.UI.Services
@using Microsoft.AspNetCore.WebUtilities
@using System.Text
@using System.Text.Encodings.Web
@using IndxCloudApi.Data
@attribute [Authorize]
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IEmailSender EmailSender
@inject NavigationManager NavigationManager
@inject ILogger<Index> Logger

<PageTitle>Manage Account</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h2>Manage Your Account</h2>
            <p class="text-muted">Manage your account settings and preferences.</p>
            <hr />

            @if (user != null)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5>Account Information</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">Email</dt>
                            <dd class="col-sm-9">@user.Email</dd>

                            <dt class="col-sm-3">Username</dt>
                            <dd class="col-sm-9">@user.UserName</dd>

                            <dt class="col-sm-3">Email Confirmed</dt>
                            <dd class="col-sm-9">
                                @if (user.EmailConfirmed)
                                {
                                    <span class="badge bg-success">Confirmed</span>
                                }
                                else
                                {
                                    <div>
                                        <span class="badge bg-warning">Not Confirmed</span>
                                    </div>
                                    @if (emailResendSuccess)
                                    {
                                        <div class="text-success mt-2">Confirmation email sent!</div>
                                    }
                                    else if (!string.IsNullOrEmpty(emailResendError))
                                    {
                                        <div class="text-danger mt-2">@emailResendError</div>
                                    }
                                    else
                                    {
                                        <button class="btn-ghost btn-micro mt-2" @onclick="ResendConfirmationEmail" disabled="@isResending">
                                            @if (isResending)
                                            {
                                                <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                            }
                                            Resend Confirmation Email
                                        </button>
                                    }
                                }
                            </dd>

                            <dt class="col-sm-3">Two-Factor Auth</dt>
                            <dd class="col-sm-9">
                                @if (user.TwoFactorEnabled)
                                {
                                    <span class="badge bg-success">Enabled</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Disabled</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5>Account Management</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <a href="/Account/ApiKey" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">API Key / JWT Token</h6>
                                    <span class="oi oi-key"></span>
                                </div>
                                <p class="mb-1 text-muted">Generate and manage your API access token</p>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card border-danger mt-3">
                    <div class="card-header bg-danger text-white">
                        <h5>Danger Zone</h5>
                    </div>
                    <div class="card-body">
                        <h6>Delete Account</h6>
                        <p class="text-muted mb-3">
                            Once you delete your account, there is no going back. This will permanently delete your account and all associated data.
                        </p>

                        @if (showDeleteConfirmation)
                        {
                            <div class="alert alert-danger">
                                <p><strong>Are you absolutely sure?</strong></p>
                                <p>This action cannot be undone. Type your email address to confirm:</p>
                                <input type="text" class="form-control mb-2" @bind="confirmEmail" @bind:event="oninput" placeholder="Enter your email" />
                                <div class="d-flex gap-2">
                                    @if (CanDeleteAccount)
                                    {
                                        <form action="Account/Manage/DeleteAccount" method="post">
                                            <AntiforgeryToken />
                                            <button type="submit" class="btn-danger">
                                                Yes, Delete My Account
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn-danger" disabled>
                                            Yes, Delete My Account
                                        </button>
                                    }
                                    <button class="btn-secondary" @onclick="CancelDelete">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        }
                        else
                        {
                            <button class="btn-secondary" @onclick="ShowDeleteConfirmation">
                                Delete My Account
                            </button>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <p>Loading account information...</p>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private ApplicationUser? user;
    private bool showDeleteConfirmation = false;
    private string confirmEmail = "";
    private bool isResending = false;
    private bool emailResendSuccess = false;
    private string? emailResendError = null;

    private bool CanDeleteAccount => user != null && confirmEmail.Trim().ToLower() == user.Email?.ToLower();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var userName = authState.User.Identity?.Name;

        if (userName != null)
        {
            user = await UserManager.FindByNameAsync(userName);
        }
    }

    private async Task ResendConfirmationEmail()
    {
        if (user == null || string.IsNullOrEmpty(user.Email))
            return;

        isResending = true;
        emailResendSuccess = false;
        emailResendError = null;

        try
        {
            var userId = await UserManager.GetUserIdAsync(user);
            var code = await UserManager.GenerateEmailConfirmationTokenAsync(user);
            code = WebEncoders.Base64UrlEncode(Encoding.UTF8.GetBytes(code));

            var callbackUrl = NavigationManager.GetUriWithQueryParameters(
                NavigationManager.ToAbsoluteUri("Account/ConfirmEmail").AbsoluteUri,
                new Dictionary<string, object?> { ["userId"] = userId, ["code"] = code });

            await EmailSender.SendEmailAsync(
                user.Email,
                "Confirm your email",
                $@"
                <html>
                <body style='font-family: Arial, sans-serif; line-height: 1.6; color: #333;'>
                    <div style='max-width: 600px; margin: 0 auto; padding: 20px;'>
                        <h2 style='color: #0066cc;'>Confirm Your Email</h2>
                        <p>Please confirm your account by clicking the button below:</p>
                        <div style='text-align: center; margin: 30px 0;'>
                            <a href='{HtmlEncoder.Default.Encode(callbackUrl)}'
                               style='background-color: #0066cc; color: white; padding: 12px 30px; text-decoration: none; border-radius: 4px; display: inline-block;'>
                                Confirm Email
                            </a>
                        </div>
                        <p style='color: #666; font-size: 14px;'>
                            Or copy and paste this link into your browser:<br/>
                            <a href='{HtmlEncoder.Default.Encode(callbackUrl)}'>{HtmlEncoder.Default.Encode(callbackUrl)}</a>
                        </p>
                    </div>
                </body>
                </html>");

            Logger.LogInformation("Resent confirmation email to {Email}", user.Email);
            emailResendSuccess = true;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error resending email confirmation");
            emailResendError = "Failed to send email. Please try again.";
        }
        finally
        {
            isResending = false;
        }
    }

    private void ShowDeleteConfirmation()
    {
        showDeleteConfirmation = true;
        confirmEmail = "";
    }

    private void CancelDelete()
    {
        showDeleteConfirmation = false;
        confirmEmail = "";
    }
}
