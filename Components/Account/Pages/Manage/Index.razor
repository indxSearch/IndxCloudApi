@page "/Account/Manage"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Identity.UI.Services
@using Microsoft.AspNetCore.WebUtilities
@using System.Text
@using System.Text.Encodings.Web
@using IndxCloudApi.Data
@attribute [Authorize]
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IEmailSender EmailSender
@inject NavigationManager NavigationManager
@inject ILogger<Index> Logger

<PageTitle>Manage Account</PageTitle>

<h2>Manage Your Account</h2>
<p style="color: var(--lv5); margin-bottom: 40px;">Manage your account settings and preferences.</p>

@if (user != null)
{
    <div style="margin-bottom: 40px;">
        <h3>Account Information</h3>

        <div style="margin-top: 20px;">
            <p><strong>Email:</strong> @user.Email</p>
            <p><strong>Username:</strong> @user.UserName</p>

            <div style="margin-bottom: 20px;">
                <p>
                    <strong>Email Confirmed:</strong>
                    @if (user.EmailConfirmed)
                    {
                        <span style="color: var(--CTeal); margin-left: 10px;">✓ Confirmed</span>
                    }
                    else
                    {
                        <span style="color: var(--CWarning); margin-left: 10px;">⚠ Not Confirmed</span>
                    }
                </p>
                @if (!user.EmailConfirmed)
                {
                    @if (emailResendSuccess)
                    {
                        <div style="color: var(--CTeal); margin-top: 10px;">Confirmation email sent!</div>
                    }
                    else if (!string.IsNullOrEmpty(emailResendError))
                    {
                        <div style="color: var(--CSignal); margin-top: 10px;">@emailResendError</div>
                    }
                    else
                    {
                        <button class="btn-ghost btn-micro" style="margin-top: 10px;" @onclick="ResendConfirmationEmail" disabled="@isResending">
                            @if (isResending)
                            {
                                <span>Sending...</span>
                            }
                            else
                            {
                                <span>Resend Confirmation Email</span>
                            }
                        </button>
                    }
                }
            </div>

            <p>
                <strong>Two-Factor Auth:</strong>
                @if (user.TwoFactorEnabled)
                {
                    <span style="color: var(--CTeal); margin-left: 10px;">✓ Enabled</span>
                }
                else
                {
                    <span style="color: var(--lv5); margin-left: 10px;">Disabled</span>
                }
            </p>
        </div>
    </div>

    <div style="margin-bottom: 40px;">
        <h3>Account Management</h3>
        <div style="margin-top: 20px;">
            <a href="/Account/ApiKey" style="display: block; padding: 10px; border: 1px solid var(--lv3); border-radius: var(--radius); margin-bottom: 10px; text-decoration: none;">
                <strong>API Key / JWT Token</strong>
                <p style="color: var(--lv5); margin-top: 5px;">Generate and manage your API access token</p>
            </a>
        </div>
    </div>

    <div style="margin-bottom: 40px;">
        <h3 style="color: var(--CSignal);">Danger Zone</h3>
        <p style="color: var(--lv5); margin-top: 10px;">
            Once you delete your account, there is no going back. This will permanently delete your account and all associated data.
        </p>

        @if (showDeleteConfirmation)
        {
            <div style="margin-top: 20px; padding: 20px; border: 1px solid var(--CSignal); border-radius: var(--radius); background: rgba(255, 66, 56, 0.1);">
                <p><strong>Are you absolutely sure?</strong></p>
                <p>This action cannot be undone. Type your email address to confirm:</p>
                <input type="text" style="margin: 10px 0; width: 100%;" @bind="confirmEmail" @bind:event="oninput" placeholder="Enter your email" />
                <div style="display: flex; gap: 10px; margin-top: 10px;">
                    @if (CanDeleteAccount)
                    {
                        <form action="Account/Manage/DeleteAccount" method="post">
                            <AntiforgeryToken />
                            <button type="submit" class="btn-danger">
                                Yes, Delete My Account
                            </button>
                        </form>
                    }
                    else
                    {
                        <button class="btn-danger" disabled>
                            Yes, Delete My Account
                        </button>
                    }
                    <button class="btn-secondary" @onclick="CancelDelete">
                        Cancel
                    </button>
                </div>
            </div>
        }
        else
        {
            <button class="btn-secondary" style="margin-top: 20px;" @onclick="ShowDeleteConfirmation">
                Delete My Account
            </button>
        }
    </div>
}
else
{
    <p>Loading account information...</p>
}

@code {
    private ApplicationUser? user;
    private bool showDeleteConfirmation = false;
    private string confirmEmail = "";
    private bool isResending = false;
    private bool emailResendSuccess = false;
    private string? emailResendError = null;

    private bool CanDeleteAccount => user != null && confirmEmail.Trim().ToLower() == user.Email?.ToLower();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var userName = authState.User.Identity?.Name;

        if (userName != null)
        {
            user = await UserManager.FindByNameAsync(userName);
        }
    }

    private async Task ResendConfirmationEmail()
    {
        if (user == null || string.IsNullOrEmpty(user.Email))
            return;

        isResending = true;
        emailResendSuccess = false;
        emailResendError = null;

        try
        {
            var userId = await UserManager.GetUserIdAsync(user);
            var code = await UserManager.GenerateEmailConfirmationTokenAsync(user);
            code = WebEncoders.Base64UrlEncode(Encoding.UTF8.GetBytes(code));

            var callbackUrl = NavigationManager.GetUriWithQueryParameters(
                NavigationManager.ToAbsoluteUri("Account/ConfirmEmail").AbsoluteUri,
                new Dictionary<string, object?> { ["userId"] = userId, ["code"] = code });

            await EmailSender.SendEmailAsync(
                user.Email,
                "Confirm your email",
                $@"
                <html>
                <body style='font-family: Arial, sans-serif; line-height: 1.6; color: #333;'>
                    <div style='max-width: 600px; margin: 0 auto; padding: 20px;'>
                        <h2 style='color: #0066cc;'>Confirm Your Email</h2>
                        <p>Please confirm your account by clicking the button below:</p>
                        <div style='text-align: center; margin: 30px 0;'>
                            <a href='{HtmlEncoder.Default.Encode(callbackUrl)}'
                               style='background-color: #0066cc; color: white; padding: 12px 30px; text-decoration: none; border-radius: 4px; display: inline-block;'>
                                Confirm Email
                            </a>
                        </div>
                        <p style='color: #666; font-size: 14px;'>
                            Or copy and paste this link into your browser:<br/>
                            <a href='{HtmlEncoder.Default.Encode(callbackUrl)}'>{HtmlEncoder.Default.Encode(callbackUrl)}</a>
                        </p>
                    </div>
                </body>
                </html>");

            Logger.LogInformation("Resent confirmation email to {Email}", user.Email);
            emailResendSuccess = true;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error resending email confirmation");
            emailResendError = "Failed to send email. Please try again.";
        }
        finally
        {
            isResending = false;
        }
    }

    private void ShowDeleteConfirmation()
    {
        showDeleteConfirmation = true;
        confirmEmail = "";
    }

    private void CancelDelete()
    {
        showDeleteConfirmation = false;
        confirmEmail = "";
    }
}
